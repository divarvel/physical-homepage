name:                physical-homepage
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/divarvel/physical-homepage#readme
author:              ClÃ©ment Delafargue
maintainer:          clement@delafargue.name
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable spock-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts "-with-rtsopts=-T -N"
  build-depends:       base
                     , blaze-html
                     , bytestring
                     , containers
                     , ekg-core
                     , ekg-statsd
                     , scotty
                     , text
                     , text-icu
                     , wai-middleware-metrics
                     , wai-middleware-static
  default-language:    Haskell2010
  other-modules:       Model
                     , Talks
                     , Views.Layout
                     , Views.MainPage
                     , Views.TalksPage

test-suite spock-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
